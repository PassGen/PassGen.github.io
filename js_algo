        <br> Enter Month : <input id="input_2" type="text" />

        <br> Enter Year : <input id="input_3" type="text" />

    </div>

    <div id="2" style="display:none">

        <p id="input_string">

        </p>

        Binary <input id="input_1" name="input2" type="radio" onClick="convert(2);" />

        <br> Octal <input id="input_2" name="input2" type="radio" onClick="convert(8);" />

        <br> Hex <input id="input_3" name="input2" type="radio" onClick="convert(16);" />

        <br> "SPECIAL OOOOOH" <input id="input_3" name="input2" type="radio" onClick="convert(-1);" />

        <br>

        <p id="output_string">

        </p>

    </div>

    <div id="3" style="display:none">

        Your Password Is :
        <br>
        <p id="password">
        </p>
    </div>

    <div id="next_button" style="display:none">

        <input id="next" type="button" value="Next" onClick="next();" />

    </div>

</body>

